    private void txtPrénomActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void btnAjouterActionPerformed(java.awt.event.ActionEvent evt) {                                           
        ajouterEtudiant();
    }                                          

    private void btnSupprimerActionPerformed(java.awt.event.ActionEvent evt) {                                             
        modèle = (DefaultTableModel)tableauEtudiants.getModel();
        int ligne = tableauEtudiants.getSelectedRow();
        if (ligne!=-1){
           etudiants.remove(ligne);
           modèle.removeRow(ligne);
            viderChamps();
        
        }                                            
    }                                            

    private void viderChamps() {
        txtNom.setText("");
        txtPrénom.setText("");
        txtAge.setText("");
        txtNom.requestFocus();
    }

    private void btnModifierActionPerformed(java.awt.event.ActionEvent evt) {                                            
        modèle = (DefaultTableModel)tableauEtudiants.getModel();
        int ligne = tableauEtudiants.getSelectedRow();
        if (ligne!=-1){
            modèle.setValueAt(txtNom.getText(), ligne, 1);
            modèle.setValueAt(txtPrénom.getText(), ligne, 2);
            modèle.setValueAt(txtAge.getText(), ligne, 3);
            etudiants.get(ligne).setNom(txtNom.getText());
            etudiants.get(ligne).setPrénom(txtPrénom.getText());
            etudiants.get(ligne).setAge(Integer.valueOf(txtAge.getText()));
        
        }          
    }                                           

    private void tableauEtudiantsMouseClicked(java.awt.event.MouseEvent evt) {                                              
        modèle = (DefaultTableModel)tableauEtudiants.getModel();
        int ligne = tableauEtudiants.getSelectedRow();
        if (ligne!=-1){
            txtNom.setText(etudiants.get(ligne).getNom());
            txtPrénom.setText(etudiants.get(ligne).getPrénom());
            txtAge.setText(String.valueOf(etudiants.get(ligne).getNom()));
        }
    }                                             

    private void btnChercherActionPerformed(java.awt.event.ActionEvent evt) {                                            
        modèle = (DefaultTableModel)tableauEtudiants.getModel();
        boolean trouve = false;
        int indice=0;
        if(txtChercher.getText().equals(""))
            JOptionPane.showMessageDialog(this, "Entrez un nom d'eleve SVP", "Nom manquant", JOptionPane.ERROR_MESSAGE);
        else{
            String nomCherché = txtChercher.getText();
            for(int i=0;i<etudiants.size();i++){
                Etudiant e = etudiants.get(i);
                if(nomCherché.equals(e.getNom())){
                    trouve = true;
                    indice =i;
                    break;
                }
            }
        }
        if(trouve){
            txtNom.setText(etudiants.get(indice).getNom());
            txtPrénom.setText(etudiants.get(indice).getPrénom());
            txtAge.setText(String.valueOf(etudiants.get(indice).getAge()));
            tableauEtudiants.setRowSelectionInterval(indice, indice);
        }
        else{
            JOptionPane.showMessageDialog(this, "Cet eleve n'est pas dans votre liste ", "Eleve inexistant", JOptionPane.ERROR_MESSAGE);
        }
                
    }                                           

    private void txtChercherActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here
    }                                           

    private void ajouterEtudiant() {
        modèle = (DefaultTableModel)tableauEtudiants.getModel();
        boolean ajout = true;
        if(txtNom.getText().equals("") || txtPrénom.getText().equals("") || txtAge.getText().equals("")){
            JOptionPane.showMessageDialog(this, "Remplissez tout les champs svp", "Champs Vides", JOptionPane.ERROR_MESSAGE);
            ajout =false;
        }
        for(Etudiant e:etudiants){
            if(e.getNom().equals(txtNom.getText())&&e.getPrénom().equals(txtPrénom.getText())){
                JOptionPane.showMessageDialog(this, "Cet éleve est deja inscrit", "Eléve existant", JOptionPane.ERROR_MESSAGE);
                ajout = false;
                viderChamps();
            }
        }
        
        
        if (ajout){
            Etudiant etudiant = new Etudiant(txtNom.getText(), txtPrénom.getText(), Integer.valueOf(txtAge.getText()));
            etudiants.add(etudiant);
            modèle.addRow(new Object[]{etudiant.getInscription(),
            etudiant.getNom(),etudiant.getPrénom(),etudiant.getAge()}) ;
            viderChamps();
                    
        }
    }
